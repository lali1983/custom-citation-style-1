<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl"
  version="1.0"
  class="numeric"
  default-locale="en-US">

  <info>
    <title>NPJ/Vancouver-like (Full authors, colon after authors, DOI at end)</title>
    <id>http://www.zotero.org/styles/npj-vancouver-colon-full-authors</id>
    <link href="http://www.zotero.org/styles/npj-vancouver-colon-full-authors" rel="self"/>
    <category citation-format="numeric"/>
    <summary>Vancouver-like numeric references with full author list, colon after authors, and doi: prefix.</summary>
    <updated>2026-01-20</updated>
  </info>

  <!-- AUTHOR -->
  <macro name="author">
    <names variable="author" delimiter=", ">
      <name initialize-with="" name-as-sort-order="all" sort-separator=" "/>
    </names>
  </macro>

  <!-- YEAR -->
  <macro name="year">
    <date variable="issued">
      <date-part name="year"/>
    </date>
  </macro>

  <!-- JOURNAL (short/abbrev if available) -->
  <macro name="journal">
    <text variable="container-title" form="short"/>
  </macro>

  <!-- VOLUME(ISSUE) -->
  <macro name="vol-issue">
    <group>
      <text variable="volume"/>
      <group prefix="(" suffix=")">
        <text variable="issue"/>
      </group>
    </group>
  </macro>

  <!-- PAGES OR ARTICLE NUMBER -->
  <macro name="pages-or-article">
    <choose>
      <if variable="page">
        <text variable="page"/>
      </if>
      <else-if variable="article-number">
        <text variable="article-number"/>
      </else-if>
    </choose>
  </macro>

  <!-- DOI -->
  <macro name="doi">
    <choose>
      <if variable="DOI">
        <text prefix="doi: " variable="DOI" suffix="."/>
      </if>
    </choose>
  </macro>

  <!-- IN-TEXT CITATIONS -->
  <citation collapse="citation-number">
    <sort>
      <key variable="citation-number"/>
    </sort>
    <layout prefix="[" suffix="]" delimiter=", ">
      <text variable="citation-number"/>
    </layout>
  </citation>

  <!-- BIBLIOGRAPHY -->
  <bibliography>
    <layout suffix=".">
      <group delimiter=" ">
        <group>
          <text macro="author"/>
          <text value=":"/>
        </group>
        <text variable="title" suffix="."/>
        <group delimiter=" ">
          <text macro="journal"/>
          <group>
            <text macro="year"/>
            <text value=","/>
          </group>
          <group>
            <text macro="vol-issue"/>
            <text value=":"/>
            <text macro="pages-or-article" suffix="."/>
          </group>
        </group>
        <text macro="doi"/>
      </group>
    </layout>
  </bibliography>

</style>
